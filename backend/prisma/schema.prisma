// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  userEmail String        @unique @map("user_email") @db.VarChar(320)
  userName  String        @map("user_name") @db.VarChar(50)
  password  String        @db.VarChar(50)
  createdAt DateTime      @default(now()) @map("created_at") @db.Timestamp(0)
  role      role          @default(USER)
  profile   user_profile?
  token     RefreshToken?
  post      post[]
  board     board[]

  @@map("user")
}

model user_profile {
  id            String @id @default(uuid())
  user_id       String @unique
  profile_image String @db.Text
  user          User   @relation(fields: [user_id], references: [id])
}

model RefreshToken {
  id                  String   @id @default(uuid())
  userId              String   @unique @map("user_id")
  token               String   @db.Text
  tokenExpirationDate DateTime @map("token_expiration_date") @db.Timestamp(0)
  user                User     @relation(fields: [userId], references: [id])
  @@map("refresh_token")
}

model post {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(100)
  content    String   @db.Text
  author_id  String
  author     User     @relation(fields: [author_id], references: [id])
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @default(now()) @db.Timestamp(0)
}

model board {
  id         String      @id @default(uuid())
  title      String      @db.VarChar(100)
  content    String      @db.Text
  status     boardStatus @default(DRAFT)
  author_id  String
  author     User        @relation(fields: [author_id], references: [id])
  created_at DateTime    @default(now()) @db.Timestamp(0)
  updated_at DateTime    @default(now()) @db.Timestamp(0)
}

enum boardStatus {
  DRAFT
  PUBLISHED
}

enum role {
  USER
  ADMIN
}
