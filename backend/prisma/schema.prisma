// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  userEmail String        @unique @map("user_email") @db.VarChar(320)
  userName  String        @map("user_name") @db.VarChar(50)
  password  String        @db.VarChar(50)
  createdAt DateTime      @default(now()) @map("created_at") @db.Timestamp(0)
  role      Role          @default(USER)
  profile   UserProfile?
  token     RefreshToken?
  post      Post[]
  board     Board[]

  @@map("user")
}

model UserProfile {
  id           String @id @default(uuid())
  userId       String @unique @map("user_id")
  profileImage String @map("profile_image") @db.Text
  user         User   @relation(fields: [userId], references: [id])

  @@map("user_profile")
}

model RefreshToken {
  id                  String   @id @default(uuid())
  userId              String   @unique @map("user_id")
  token               String   @db.Text
  tokenExpirationDate DateTime @map("token_expiration_date") @db.Timestamp(0)
  user                User     @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Post {
  id        String     @id @default(uuid())
  title     String     @db.VarChar(100)
  content   String     @db.Text
  status    PostStatus @default(DRAFT)
  authorId  String     @map("author_id")
  author    User       @relation(fields: [authorId], references: [id])
  createdAt DateTime   @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt DateTime   @default(now()) @map("updated_at") @db.Timestamp(0)

  @@map("post")
}

model Board {
  id        String      @id @default(uuid())
  title     String      @db.VarChar(100)
  content   String      @db.Text
  status    BoardStatus @default(DRAFT)
  authorId  String      @map("author_id")
  author    User        @relation(fields: [authorId], references: [id])
  createdAt DateTime    @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt DateTime    @default(now()) @map("updated_at") @db.Timestamp(0)

  @@map("board")
}

enum BoardStatus {
  DRAFT
  PUBLISHED
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

enum Role {
  USER
  ADMIN
}
